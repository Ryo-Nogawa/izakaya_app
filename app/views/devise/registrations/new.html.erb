<h2>Sign up</h2>

<ol class="nav">
  <li class="current">1.入力</li>
  <li>2.確認</li>
  <li>3.完了</li>
</ol>

  <%= form_with model: @user, url: { action: 'confirm'}, local: true do |f| %>
  <%= render "shared/error_messages", model: @user %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, placeholder: '40文字以内で入力して下さい' %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: 'フルネームを入力して下さい' %>
  </div>

  <div class="field">
    <%= f.label :name_kana %><br />
    <%= f.text_field :name_kana, placeholder: 'フリガナ' %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, placeholder: '半角数字で入力' %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, placeholder: 'ハイフン(ー)無し' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "確認画面" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
