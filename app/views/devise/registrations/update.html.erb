<div class="update-user-main">
  <h1 class="update-user-title"><i class="fas fa-check-circle"></i>ユーザー情報を更新しました</h1>


  <ol class="nav">
    <li class="nav-list">1.入力</li>
    <li class="nav-list current">2.完了</li>
  </ol>

  <div class="update-user-form">
    <table class="update-user-table" width="500" height="300">
      <tr align="center">
        <td>ニックネーム</td>
        <td><%= @user.nickname %></td>
      </tr>

      <tr align="center">
        <td>お名前</td>
        <td><%= @user.name %></td>
      </tr>

      <tr align="center">
        <td>お名前（カナ）</td>
        <td><%= @user.name_kana %></td>
      </tr>

      <tr align="center">
        <td>年齢</td>
        <td><%= @user.age %></td>
      </tr>

      <tr align="center">
        <td>電話番号</td>
        <td><%= @user.phone_number %></td>
      </tr>

      <tr align="center">
        <td>Eメール</td>
        <td><%= @user.email %></td>
      </tr>
    </table>

    <%= link_to 'ログインする', root_path, class: "btn btn-outline-primary mt-4" %>
  </div>
</div>