<div class="comment-content-main">
  <div class="comment-count">
    全<%= comments.count %>件のコメントがあります（古い順）<br />
  </div>

  <% comments.first(4).each do |comment| %>
    <% unless comment.id.nil? %>
      <div class="comment-content">
        <p class="comment-detail">
          <%= link_to comment.user.nickname, "/users/#{comment.user_id}", class: "comment-user-nickname" %>：<%= comment.created_at.strftime("%Y/%m/%d") %>
        </p>
        <p class="comment-text">
          <%= comment.comment %>
        </p>
      </div>
    <% end %>
  <% end %>
  <div class="collapse" id="collapseExample">
    <% comments.offset(4).each do |comment| %>
      <% unless comment.id.nil? %>
        <div class="comment-content">
          <p class="comment-detail">
            <%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：<%= comment.created_at.strftime("%Y/%m/%d") %>
          </p>
          <p class="comment-text">
            <%= comment.comment %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>

  <p class="more btn btn-outline-success btn-sm" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">全件表示する</p>
</div>
