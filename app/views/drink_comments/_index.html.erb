<div class="comment-content-main">
  <div class="comment-count">
    全<%= comments.count %>件のコメントがあります<br />
  </div>

  <div class="comment-container" id="comment-container">
    <div id="drink_comment">
      <% comments.each do |comment| %>
        <% unless comment.id.nil? %>
          <div class="comment-content" id="commnet-content">
            <p class="comment-detail">
              <%= link_to comment.user.nickname, "/users/#{comment.user_id}", class: "comment-user-nickname" %>：<%= comment.created_at.strftime("%Y/%m/%d") %>
            </p>
            <p class="comment-text">
              <%= comment.comment %>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<script>
  const scroll = document.getElementById("drink_comment")
  scroll.scrollIntoView(false)
</script>