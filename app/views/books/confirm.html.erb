<div class="confirm-book-main">
  <h1 class="confirm-book-title">予約確認画面</h1>

  <ol class="nav">
    <li class="nav-list">1.入力</li>
    <li class="nav-list current">2.確認</li>
    <li class="nav-list">3.完了</li>
  </ol>

  <div class="confirm-book-form">
    <table class="confirm-book-table " width="500" height="300">
      <tr align="center">
        <td>御予約日時</td>
        <td><%= @book.reserve_date.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr align="center">
        <td>御予約時間</td>
        <td><%= @book.reserve_time.strftime("%-H:%M") %></td>
      </tr>
      <tr align="center">
        <td>御予約人数</td>
        <td><%= @book.number_reserve %></td>
      </tr>
      <tr align="center">
        <td>御予約内容</td>
        <td><%= @book.reserve_category.name %></td>
      </tr>
    </table>
    
    <div class="actions book-actios">
      <%= form_with model: @book, url: new_books_path, local: true do |f|%>
        <%= f.hidden_field :reserve_date %>
        <%= f.hidden_field :reserve_time %>
        <%= f.hidden_field :number_reserve %>
        <%= f.hidden_field :reserve_category_id %>
        <%= f.submit "入力画面に戻る", class: "mr-3 btn btn-outline-primary" %>
      <% end %>

      <%= form_with model: @book, url: {action: :create}, local: true do |f|%>
        <%= f.hidden_field :reserve_date %>
        <%= f.hidden_field :reserve_time %>
        <%= f.hidden_field :number_reserve %>
        <%= f.hidden_field :reserve_category_id %>
        <%= f.submit "予約する", class: "btn btn-outline-primary"  %>
      <% end %>
    </div>
  </div>
</div>