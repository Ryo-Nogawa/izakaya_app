<%# 混雑状況のラジオボタン %>
<div class="congestion">
  <form action="" name="congestionForm">
    <input type="radio" id="congestion1" name="congestion-situation" onchange="onRadioButtonChange();" />〜2割
    <input type="radio" id="congestion2" name="congestion-situation" onchange="onRadioButtonChange();" />3割〜5割
    <input type="radio" id="congestion3" name="congestion-situation" onchange="onRadioButtonChange();" />6割〜8割
    <input type="radio" id="congestion4" name="congestion-situation" onchange="onRadioButtonChange();" />9割〜満席
  </form>

  <%# 出力結果を表示させる場所 %>
  <div id="output"></div>
</div>

<div class="top-main">
  <div class="main-content">
    <div class="card booking-card">
      <%= link_to new_book_path, class: "card-item new-book-grid" do %>
        <div class="card-text"><i class="far fa-check-circle"></i>  ご予約はこちらから <i class="far fa-check-circle"></i></div>
      <% end %>
    </div>
    <div class="grid">
      <div class="card book-card">
        <% if current_user.admin? %>
          <%= link_to book_admin_books_path(current_user.id), class: "card-item" do %>
            <div class="card-title">予約表</div>
          <% end %>
        <% else %>
          <%= link_to user_path(current_user.id), class: "card-item" do %>
            <div class="card-title">予約履歴</div>
          <% end %>
        <% end %>
      </div>
      <div class="card drink-card">
        <%= link_to drinks_path, class: "card-item" do %>
          <div class="card-title">お飲み物</div>
        <% end %>
      </div>
      <div class="card food-card">
        <%= link_to foods_path, class: "card-item" do %>
          <div class="card-title">お料理</div>
        <% end %>
      </div>
    </div>
    <div class="grid">
      <div class="card visual-card">
        <%= link_to visuals_path, class: "card-item" do %>
          <div class="card-title">外観/内装</div>
        <% end %>
      </div>
      <div class="card blog-card">
        <%= link_to blogs_path, class: "card-item" do %>
          <div class="card-title">ブログ</div>
        <% end %>
      </div>
      <div class="card chat-card">
        <%= link_to messages_path, class: "card-item" do %>
          <div class="card-title">ご意見/ご要望</div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%#= link_to 'チャットルーム作成', new_room_path %>

<%# 混雑状況のjs %>
<script>
  function onRadioButtonChange() {
    check1 = document.getElementById("congestion1");
    check2 = document.getElementById("congestion2");
    check3 = document.getElementById("congestion3");
    check4 = document.getElementById("congestion4");
    
    target = document.getElementById("output");
    
    if (check1.checked == true) {
      target.innerHTML = "〜2割<br/>";
    } else if (check2.checked == true) {
      target.innerHTML = "3割〜5割<br/>";
    } else if (check3.checked == true) {
      target.innerHTML = "6割〜8割<br/>";
    } else if (check4.checked == true) {
      target.innerHTML = "9割〜満席<br/>";
    }
  }
</script>