<h1>新規投稿</h1>

<%= form_with model: @blog, local: true do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="submit">
    <%= f.submit '送信' %>
    <div id="blog-image-list"></div>
  </div>

<% end %>

<%= image_tag @blog.image, id: 'image' if @blog.image.present? %>