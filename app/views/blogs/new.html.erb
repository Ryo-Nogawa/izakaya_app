<h1>新規投稿</h1>

<%= form_with model: @blog, local: true do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>

  <div class="field">
    <%= f.label :images %><br />
    <%= f.file_field :images, name: 'blog[images][]', id: 'blog_image' %>
  </div>

  <div class="submit">
    <%= f.submit '送信' %>
    <div id="image-list"></div>
  </div>

<% end %>

<% @blog.images.each do |image| %>
  <%= image_tag image %>
<% end %>