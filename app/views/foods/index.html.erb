<h1>料理メニュー</h1>

<%# 検索ボタン %>
<%= search_form_for @p, url: search_foods_path do |f| %>
  <%= f.label :food_category_id %>
  <%= f.radio_button :food_category_id_eq, '2' %>おすすめ
  <%= f.radio_button :food_category_id_eq, '3' %>とりあえず
  <%= f.radio_button :food_category_id_eq, '4' %>サラダ
  <%= f.radio_button :food_category_id_eq, '5' %>一品料理
  <%= f.radio_button :food_category_id_eq, '6' %>串
  <%= f.radio_button :food_category_id_eq, '7' %>焼き物
  <%= f.radio_button :food_category_id_eq, '8' %>海鮮
  <%= f.radio_button :food_category_id_eq, '9' %>主食
  <%= f.radio_button :food_category_id_eq, '10' %>デザート
  <%= f.submit '検索' %>
<% end %>


<% @foods.each do |food| %>
  <%= food.title %>
  <%# いいね機能 %>
  <div id="food-<%= food.id %>"> 
    <%= render 'food_like', food: food %>
  </div>
  <%# いいね機能 %>
  <%= food.price %>
  <%= food.food_category.name %>
  <%= link_to food_path(food.id) do %>
    <%= image_tag food.image.variant(resize: '400x400') %>
  <% end %>
<% end %>

<%= link_to '新規作成', new_food_path %>