<% if current_user.liked_by?(food.id) %>
    <%= link_to 'いいねを外す', destroy_food_like_path(food.id), class: 'like-link', method: :DELETE, remote: true %>
    <%= food.food_likes.count %>
<% else %>
    <%= link_to 'いいねをする', create_food_like_path(food.id), class: 'like-link', method: :POST, remote: true %>
    <%= food.food_likes.count %>
<% end %>