<% if user_signed_in? %>
  <% if current_user.food_likes.find_by(food_id: food.id) %>
      <%= link_to food_food_likes_path(food.id), class: "like-link", method: :DELETE, remote: true do %>
        <i class="fa fa-heart unlike-btn"></i>
      <% end %>
      <%= food.food_likes.count %>
  <% else %>
      <%= link_to food_food_likes_path(food.id), class: "like-link", method: :POST, remote: true do %>
        <i class="fa fa-heart like-btn"></i>
      <% end %>
      <%= food.food_likes.count %>
  <% end %>
<% end %>