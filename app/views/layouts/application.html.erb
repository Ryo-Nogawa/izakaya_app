<!DOCTYPE html>
<html>
  <head>
    <title>IzakayaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="header-left">
          <a href="/">
            <%= image_tag "logo.png", class: "logo" %>
          </a>
        </div>
        <div class="header-right collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <% if current_user %>
              <%# ログインユーザー %>
              <li class="nav-item dropdown d-flex align-items-center"><%= link_to current_user.nickname, edit_user_registration_path, class: "nickname-btn" %></li>
              <li class="nav-item d-flex align-items-center"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "header-item btn btn-outline-warning btn-sm" %></li>
            <% else %>
              <%# 未ログインユーザー %>
              <li class="nav-item d-flex align-items-center"><%= link_to '新規登録', new_user_registration_path, class: "header-item btn btn-outline-warning btn-md" %></li>
              <li class="nav-item d-flex align-items-center"><%= link_to 'ログイン', new_user_session_path, class: "header-item btn btn-outline-warning btn-md" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
