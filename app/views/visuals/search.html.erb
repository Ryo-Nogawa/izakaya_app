<div class="visual-index-main">
  <div class="visual-index-top">
    <% if current_user.admin? %>
      <%= link_to '新規作成', new_visual_path, class: "btn btn-outline-danger mt-1" %>
    <% end %>
  </div>

  <%#= 検索ボタン %>
  <div class="visual-search-btn">
    <%= render 'visuals/radio_button' %>
  </div>

  <%# 検索セレクトボックス %>
  <div class="select-search">
    <%= render 'visuals/select_box' %>
  </div>

  <div class="visual-index-content container">
    <div class="row justify-content-md-center">
      <% @results.each do |visual| %>
        <div class="col-md-4 visual-col">
          <div class="visual-index-image">
            <%= image_tag visual.image.variant(resize: '400x400') %><br />
          </div>
          <% if current_user.admin? %>
            <div class="visual-index-admin">
              <%= link_to '編集', edit_visual_path(visual.id), class: "btn btn-outline-danger btn-sm mr-2" %>
              <%= link_to '削除', visual_path(visual.id), method: :delete,class: "btn btn-outline-danger btn-sm" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>