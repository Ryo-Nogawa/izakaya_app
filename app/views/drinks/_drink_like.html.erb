<% if user_signed_in? %>
  <% if current_user.drink_likes.find_by(drink_id: drink.id) %>
      <%= link_to drink_drink_likes_path(drink.id), class: "like-link", method: :DELETE, remote: true do %>
        <i class="fa fa-heart unlike-btn"></i>
      <% end %>
      <%= drink.drink_likes.count %>
  <% else %>
      <%= link_to drink_drink_likes_path(drink.id), class: "like-link", method: :POST, remote: true do %>
        <i class="fa fa-heart like-btn"></i>
      <% end %>
      <%= drink.drink_likes.count %>
  <% end %>
<% end %>